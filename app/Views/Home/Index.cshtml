@model ChatHubViewModel
@{
    ViewData["Title"] = "Home Page";

}

<div id="modal-container"></div>

<div id="posts-container">
    <nav id="master-list">

          <ul class="list-group connection">
               <li class="list-group-item" id="connection-state">
                <div class="alert" role="alert">
               
                </div>
            </li>

            <li class="list-group-item connection-conditional" id="connection-message">
                    <div class="alert" role="alert">
                
                    </div>
                </li>
            <li class="list-group-item" id="reconnect-button"> 
              <button class="btn btn-outline-secondary" type="button">Reconnect</button>
            </li>

          </ul>
        <ul class="list-group create connection-conditional">
            <li class="list-group-item">Create room
                <i class="fas fa-folder-plus fa-lg"></i>
                </li>
        </ul>
        <ul class="list-group rooms connection-conditional">
            
        </ul>
    </nav>
    <main>
        <div class="container connection-conditional">
             <div class="loader">Loading...</div>
            <div id="posts">
                <div class="post">
                </div>
            </div>
            <div id="post-input">
                <div class="row">
                <div id="input-container" class="input-group mb-3">
                    <input type="text" id="messageInput" class="form-control" placeholder="Message" aria-label="Message" aria-describedby="message">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" id="sendButton" type="button">Send message</button>
                    </div>
                </div>
              
            </div>
        </div>
    </main>
</div>
<form id="hubsendpost" method="post"></form>
@if(@ViewBag.RouteId != null) 
{
    <div data-init-room=@ViewBag.RouteId id='chatroom-route-config'></div>
}


<script src="~/custom/main.js" asp-append-version="true"></script>




